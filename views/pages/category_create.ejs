<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../template/head', { title: title } ); %>
</head>

<body>

    <header>
        <%- include ('../template/header', { username: null, configHeader:configHeader, currpage : currpage }); %>
    </header>

    <main>
        <div class="container">


            <H3> Create a NEW Category: </H3>

            <form action=".../category/create" enctype="multipart/form-data" method="POST">

                <input type="hidden" name="_id" value="">
                <!-- id -->
                <div class="form-group">
                    <label for="id">Id</label>
                    <input type="text" class="form-control" id="id" name="id" aria-describedby="idHelp">
                    <small id="idHelp" class="form-text text-muted"> </small>
                    <div class="text-danger"></div>
                </div>

                <!-- name -->
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp">
                    <small id="nameHelp" class="form-text text-muted"></small>
                </div>

                <!-- description -->
                <div class="form-group">
                    <label for="description">Description </label>
                    <input type="text" class="form-control" id="description" name="description"
                        aria-describedby="descriptionHelp">
                    <small id="descriptionHelp" class="form-text text-muted">Description </small>
                </div>


                <button type="submit" class="btn btn-primary">Create ONE Caegory !</button>
            </form>
        </div>
        <BR>
        <BR>
    </main>
    <notify>
        <div class="container">
            <%=Notify%>
        </div>
    </notify>


    <%- include ('../template/footer'); %>


</body>

</html>